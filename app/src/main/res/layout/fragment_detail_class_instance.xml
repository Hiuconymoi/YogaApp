<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ClassInstanceFragment.DetailClassInstanceFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img_decoration_detail_course"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_yoga_class_01"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_detail_class_course_name"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Course: JavaScript"
                    android:textColor="@color/blueGray"
                    android:textSize="28dp"
                    android:textStyle="bold" />
            </LinearLayout>
                <TextView
                    android:id="@+id/txt_detail_class_day_of_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day of Week: Thursday"
                    android:textSize="20dp"
                    android:textColor="@color/blueGray"
                    />
            <TextView
                android:id="@+id/txt_detail_class_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="Date: DD/MM/YYYY "
                android:textColor="@color/blueGray"/>
            <TextView
                android:id="@+id/txt_detail_class_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher: Alex"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/blueGray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="28dp"
                android:text="Additional comment"
                android:textColor="@color/blueGray"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_detail_class_additional_comment"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/blueGray"
                android:text=""/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_detail_class_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blueGray"
                    android:text="Delete"
                    android:textSize="20dp"
                    app:iconTint="@color/white"
                    android:textColor="@color/white"
                    android:layout_margin="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />
                <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                    android:id="@+id/btn_detail_class_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blueGray"
                    android:text="Edit Class"
                    android:textSize="20dp"
                    app:iconTint="@color/white"
                    android:textColor="@color/white"
                    android:layout_margin="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>