<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@drawable/loginn"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/akronim"
        android:text="Yoga VIP"
        android:shadowRadius="@integer/material_motion_duration_long_2"
        android:shadowColor="@color/blue600"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="80sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="@dimen/size20dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/iconuser"
        android:drawablePadding="@dimen/size20dp"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="text"
        android:padding="@dimen/size20dp"
        android:singleLine="true"
        android:textColorHint="@color/gray" />

    <EditText
        android:id="@+id/editPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ems="10"
        android:drawableLeft="@drawable/iconpw"
        android:drawablePadding="@dimen/size20dp"
        android:hint="@string/password"
        android:inputType="text"
        android:password="true"
        android:padding="@dimen/size20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginRight="@dimen/size20dp"
        android:textColorHint="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="@color/orange"
            android:text="Login" />

        <Button
            android:id="@+id/btnRegis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/brown"
            android:layout_weight="1"
            android:text="Register" />
    </LinearLayout>

</LinearLayout>