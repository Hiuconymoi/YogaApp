<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/regis"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:paddingBottom="20dp"
        android:text="Register"

        android:textAlignment="center"
        android:textSize="60sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/eUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/iconuser"
        android:drawablePadding="10dp"
        android:ems="10"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/size20dp"
        android:hint="Username"
        android:inputType="text"
        android:padding="@dimen/size20dp" />

    <EditText
        android:id="@+id/ePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/iconpw"
        android:drawablePadding="10dp"
        android:ems="10"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/size20dp"
        android:hint="Password"
        android:inputType="text"
        android:password="true"
        android:padding="@dimen/size20dp" />

    <EditText
        android:id="@+id/eConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/iconpw"
        android:drawablePadding="10dp"
        android:ems="10"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/size20dp"
        android:hint="Confirm Password"
        android:password="true"
        android:padding="@dimen/size20dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/eEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/iconemail"
        android:drawablePadding="10dp"
        android:ems="10"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/size20dp"
        android:hint="Email"
        android:padding="@dimen/size20dp"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:text="Back"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="Register"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>